.header
  .header__top
    .header__top__logo
      event-app
  .header__bottom
    %ul
      %li.menu
        = link_to "TOP", events_path, class: "header-menu"
      %li.menu
        = link_to "SERCH", "#", class: "header-menu"
      - if user_signed_in?
        %li.menu
          = link_to "MY PAGE", user_path(current_user.id), class: "header-menu"
        %li.menu
          = link_to "イベント", new_event_path, class: "header-menu"
      - else
        %li.menu
          = link_to "SIGN IN", new_user_session_path, class: "header-menu"
        %li.menu
          = link_to "SIGN UP", new_user_registration_path, class: "header-menu"
